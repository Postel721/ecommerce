<p id="notice"><%= notice %></p>
<div>
  <% @line_items.each do |lineitem| %>
  <ul>
    <li><%=lineitem.product.name %></li>
    <li><%= number_to_currency(lineitem.product.price) %></li>
    <li><%= lineitem.quantity %></li>
    <li><%=number_to_currency(lineitem.line_item_total) %></li>
  </ul>
  <% end %>
</div>

<div>
  <%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-warning"%>
</div>
<p>
  <strong>Resource:</strong>
  <%= @product.resource %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>
<% if @product.quantity < 5 %>
  <p> Order now! Only <%= @product.quantity %> left in stock! </p>

<% end %>
<% if @product.quantity == 0 %>
  <p> Sorry We Out, More is coming thought. </p>
<% else %>
<%= render 'strorefront/cart_add_form' %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>